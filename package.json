{
  "name": "hive",
  "version": "0.4.0",
  "private": true,
  "description": "ATProto bot registry and trust layer",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "packages/*",
    "server/*",
    "app/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "docker compose up",
    "test": "npm run test --workspaces --if-present",
    "db:generate": "npm run db:generate -w @hive/api",
    "db:migrate": "npm run db:migrate -w @hive/api"
  }
}
